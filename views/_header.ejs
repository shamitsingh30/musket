<link rel="stylesheet" href="/css/header.css">
<header id="nav-bar">

    <h2 id="site-name"><%= locals.title %></h2>

    <div id="user-options">
        <ul>
            <% if (locals.user) { %>
                <li>
                    <a href="/users/profile">
                        <%= user.name %>
                    </a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <% }else{ %>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </div>

</header>